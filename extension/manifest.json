{
  "manifest_version": 2,

  "name": "Intrusion Prevention System",
  "description": "Helps the security of your browser.",
  "version": "0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["lib/filer.js", "lib/store.js", "lib/zepto.js", "background.js"],
    "persistent": true
  },
  "options_page": "lib/options_custom/index.html",
  "permissions": [
    "cookies",
    "experimental",
    "management",
    "processes",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "https://*/*", 
    "http://*/*"
  ],
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-2.1.0.js", "contentscript.js"]
    }
  ],
  "content_security_policy": "default-src 'self'  chrome-extension-resource: ; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval';  connect-src *; frame-src *;",
  "web_accessible_resources": ["*"],
  "update_url": "https://github.com/bezidejni/master_thesis/raw/master/extension_binary/updates.xml"
}
